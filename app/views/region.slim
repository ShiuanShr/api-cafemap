.container
  .row
    h2
     span.info.name
        = info[0].city + "市咖啡廳推薦❤️"
  .container
    .row
      - info.each do |store|
        .col-lg-4.col-md-6.col-sm-6
          span.project.attribute Store Name 店名：#{store.name}
        .col-lg-8.col-md-6.col-sm-6
          .row
            .col-sm-12
              a Address：  #{store.address}
            .col-sm-12
              a open_time：  #{store.open_time}
            .col-sm-12
              a Wifi:  #{store.wifi}
            .col-sm-12
              a Seat：  #{store.seat}
            .col-sm-12
              a Tasty：  #{store.tasty}
            .col-sm-12
              a Cheap：  #{store.cheap}
            .col-sm-12
              a Music:  #{store.music}
            .col-sm-12
              a Quiet:  #{store.quiet}
      
    .row
      - reviews.each do |review|
        .col-lg-4.col-md-6.col-sm-6
        .col-lg-8.col-md-6.col-sm-6
          .row
            .col-sm-12
              a Google Rank：#{review.rating}
            .col-sm-12
              a Reviewers：#{review.user_ratings_total}
    .row
      .col-lg-4.col-md-6.col-sm-6

      - info.each do |store|
        .col-lg-8.col-md-6.col-sm-6
            .col-sm-12
              a 📍 Location: #{store.latitude} , #{store.longitude} 