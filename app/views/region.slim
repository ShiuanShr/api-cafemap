.container
  .row
    h2
     span.info.name
        = info[0].city + "市咖啡廳推薦❤️"
  .container
    .row
      - info.each do |store|
        .col-lg-4.col-md-6.col-sm-6
          span.project.attribute Store Name 店名：#{store.name}
        .col-lg-8.col-md-6.col-sm-6
          .row
            .col-sm-12
              a Address 地址：  #{store.address}
            .col-sm-12
              a open_time：  #{store.open_time}
            .col-sm-12
              a Wifi 網路:  #{store.wifi}
            .col-sm-12
              a Seat 座位：  #{store.seat}
            .col-sm-12
              a Tasty 可口：  #{store.tasty}
            .col-sm-12
              a Cheap 價廉：  #{store.cheap}
            .col-sm-12
              a Music 音樂品味:  #{store.music}
            .col-sm-12
              a Quiet 安靜與否:  #{store.quiet}
      
    .row
      - reviews.each do |review|
        .col-lg-4.col-md-6.col-sm-6
        .col-lg-8.col-md-6.col-sm-6
          .row
            .col-sm-12
              a GoogleMap Average Rank 平均評分：#{review.rating}
            .col-sm-12
              a Amount of reviewers 評分人數：#{review.user_ratings_total}
    .row
      .col-lg-4.col-md-6.col-sm-6

      - info.each do |store|
        .col-lg-8.col-md-6.col-sm-6
            .col-sm-12
              a 📍 lat & long: #{store.latitude} , #{store.longitude} 